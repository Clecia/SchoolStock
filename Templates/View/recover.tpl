<div class='login-bg'></div>
<div class='content al-center'>

    <div class='row jc-center'>
        <div class='col'>
            <div class='box w-4'>
                <div class='logo-login'></div>
                <div class='separator'></div>
                <h2 class="txt-center">_{:system_recovery}</h2>
                <form action="#" method='post' enctype='application/x-www-form-urlencoded' rel='start' _{datasend}>
                    <div class='former'>
                        <label for="password">_{:access_email_user}</label>
                        <input name='email' type='text' aria-label='mail' placeholder='_{:access_email_user}'>
                        <i class='ais ais-mail'></i>
                    </div>
                    <div class="dFlex jc-around mg-t-1">
                        <a href="_{www}" class='wp-30 '><button type="button" class='wp-100 bgGreen ais-return'>_{:return}</button></a>
                        <button class='wp-50 ais-mail'>_{:submit_button_mail}</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
