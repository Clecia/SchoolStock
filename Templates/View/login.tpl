<div class='login-bg'></div>
<div class='content al-center'>

    <div class='row jc-center'>

        <div class='col'>
            <div class="row jc-center">
                <div class="col mg-tb-1 pd-tb-2">
                    <i class='ss ais-school-stock txtWhite txt-128'> </i>
                    <h1 class="txt-center txtWhite">SchoolStock&copy;</h1>
                </div>
            </div>
            <div class="row jc-center">
                <div class="col">
                    <div class='box w-4'>
                        <h1 class="txt-center">_{:user_login}</h1>
                        <div class='separator'></div>
                        <form action="#" method='post' enctype='application/x-www-form-urlencoded' rel='start' _{datasend}>
                            <div class='former'>
                                <label for="login">_{:login}</label>
                                <input name='login' id='login' type='text' aria-label='login' placeholder='_{:login}'>
                                <i class='ais ais-user'></i>
                            </div>
                            <div class='former'>
                                <label for="password">_{:password}</label>
                                <input name='password' id='password' type='password' aria-label='password' placeholder='_{:password}'>
                                <i class='ais ais-passwd'></i>
                            </div>
                            <div class='txt-right mg-b-1'>
                                <h5><a href='_{www}recover/'>_{:recover_lost_password}! </a></h5>
                            </div>

                            <button class='wp-100'>_{:logon}</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
